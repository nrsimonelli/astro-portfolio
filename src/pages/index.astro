---
import '@/styles/globals.css'
import Layout from '../layouts/Layout.astro'
import ProjectCard from '../components/ProjectCard.astro'
import { PROJECTS, EXPERIENCE } from '@/lib/constants'
import { Image } from 'astro:assets'
import { Scene } from '@/components/scene/scene'
import bggg from '@/assets/bg.svg'
import smallWave from '@/assets/wave-9-16.svg'
import bigWave from '@/assets/wave-16-9.svg'
import ExperienceCard from '@/components/ExperienceCard.astro'
---

<Layout title='Simonelli UI'>
  <main>
    <!-- hero -->
    <div
      class='min-h-screen bg-black/90 flex flex-col justify-start lg:justify-center relative'
    >
      <div
        class='max-w-screen-lg w-full px-8 lg:px-0 mt-32 lg:mt-0 mx-auto text-background space-y-16 transition-all duration-300'
      >
        <div class='space-y-8 max-w-[600px]'>
          <div class='space-y-2'>
            <p class='font-light uppercase text-xl md:text-2xl tracking-widest'>
              SOFTWARE ENGINEER
            </p>
            <p
              class='text-5xl md:text-7xl font-bold bg-clip-text text-transparent bg-gradient-to-b from-violet-500 to-blue-400'
            >
              Hi, I'm Nick Simonelli
            </p>
          </div>

          <div>
            <p class='text-2xl'>
              Front End Developer from Minneapolis. I build excellent user
              interfaces and have a passion for solving complex problems.
            </p>
          </div>
        </div>
      </div>

      <div class='absolute w-full h-full'>
        <Image class='object-cover w-full h-full' src={bggg} alt='grain' />
      </div>
      <div class='absolute w-full h-full'>
        <Image
          class='object-cover w-full h-full md:hidden'
          src={smallWave}
          alt='mobile background wave'
        />
        <Image
          class='object-cover w-full h-full hidden md:block'
          src={bigWave}
          alt='desktop background wave'
        />
      </div>

      <div
        class='absolute w-full translate-y-[15%] right-0 xl:translate-y-1/2 bottom-0 xl:bottom-1/2 h-[600px] max-w-screen-lg'
      >
        <Scene client:load />
      </div>
    </div>

    <!-- Calabrio / Thingbits / Lost Yeti -->
    <div class='container py-16 space-y-16' id='work'>
      <div class='md:max-w-screen-md mx-auto lg:max-w-screen-lg'>
        <p
          class='text-3xl lg:text-5xl bg-clip-text text-transparent bg-gradient-to-b from-violet-500 to-blue-500 font-bold'
        >
          Work Experience
        </p>
      </div>

      <div
        class='md:max-w-screen-md mx-auto lg:max-w-screen-lg flex md:justify-center items-center gap-8 md:flex-row flex-col transition-all duration-300 flex-wrap'
      >
        {
          EXPERIENCE.map(({ company, jobTitle, description, imagePath }) => (
            <ExperienceCard
              company={company}
              jobTitle={jobTitle}
              description={description}
              imagePath={imagePath}
            />
          ))
        }
      </div>
    </div>

    <div class='container py-16 space-y-16' id='projects'>
      <div class='md:max-w-screen-md mx-auto lg:max-w-screen-lg'>
        <p
          class='text-3xl lg:text-5xl bg-clip-text text-transparent bg-gradient-to-b from-violet-500 to-blue-500 font-bold'
        >
          Live Projects
        </p>
      </div>
      {
        PROJECTS.map(
          (
            { title, imagePath, altText, body, href, background, techStack },
            index
          ) => (
            <ProjectCard
              title={title}
              href={href}
              background={background}
              imagePath={imagePath}
              altText={altText}
              body={body}
              techStack={techStack}
              isReverse={index % 2 === 1}
            />
          )
        )
      }
    </div>
    <div class='container py-16 space-y-16' id='contact'>
      <p class='text-center'>
        Developed by <a
          class='hover:underline transition-all duration-300 underline-offset-4'
          href='https://github.com/nrsimonelli'>nrsimonelli</a
        >,
        {new Date().getFullYear()}
      </p>
    </div>
  </main>
</Layout>
